{
    "name": "raul338/cakephp-schema",
    "description": "Schema saving and loading from file for CakePHP 3.6",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "orm", "database", "schema", "migrations"],
    "homepage": "https://github.com/raul338/cakephp-schema",
    "license": "MIT",
    "authors": [
        {
            "name": "Ladislav Gallay",
            "role": "Author"
        },
        {
            "name": "Robert Scherer",
            "role": "Author"
        },
        {
            "name": "RaÃºl Arellano",
            "role": "Author"
        }
    ],
    "support": {
        "issues": "https://github.com/raul338/cakephp-schema/issues",
        "source": "https://github.com/raul338/cakephp-schema"
    },
    "require": {
        "php": ">=5.6",
        "cakephp/cakephp": "~3.6",
        "riimu/kit-phpencoder": "2.*",
        "cakephp/migrations": "^1.8||^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "cakephp/bake": "~1.3",
        "cakephp/cakephp-codesniffer": "^3.0",
        "dereuromark/cakephp-ide-helper": "^0.13"
    },
    "autoload": {
        "psr-4": {
            "Schema\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Schema\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "cs-check": "phpcs --colors -p --extensions=php --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests ./config",
        "cs-fix": "phpcbf --colors --extensions=php --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests ./config",
        "phpstan": "phpstan analyze -c phpstan.neon ./src ./tests --no-progress -l 2 --ansi --memory-limit=-1"
    }
}
